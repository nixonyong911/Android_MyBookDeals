<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nixonyong911.mybookdeals" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".NavigationTab.HashKey"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResult" />
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".NavigationTab.Sell_Book"
            android:label="@string/title_activity_sell__book" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResult" />
        </activity>
        <activity
            android:name=".NavigationTab.Register"
            android:label="@string/title_activity_register" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResult" />
        </activity>
        <activity
            android:name=".NavigationTab.Sign_In"
            android:label="@string/title_activity_sign__in" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResult" />
        </activity>
        <activity
            android:name=".NavigationTab.Signed_In"
            android:label="@string/title_activity_signed__in" />
        <activity
            android:name=".SearchResult"
            android:label="@string/title_activity_search_result" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".BookResult"
            android:label="@string/title_activity_book_result" />

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".SearchResult" />

        <activity
            android:name=".Categories.bookCategories"
            android:label="@string/title_activity_book_categories" />

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".SearchResult" />

        <activity
            android:name=".BookLocation"
            android:label="@string/title_activity_book_location" >
        </activity>
        <activity
            android:name=".NavigationTab.AdvancedSearch"
            android:label="@string/title_activity_advanced_search" >
        </activity>
        <activity
            android:name=".NavigationTab.ViewAccount"
            android:label="@string/title_activity_view_account" >
        </activity>
        <activity
            android:name=".NavigationTab.EditAccount"
            android:label="@string/title_activity_edit_account" >
        </activity>
        <activity
            android:name=".NavigationTab.AdvancedSearchResult"
            android:label="@string/title_activity_advanced_search_result" >
        </activity>
        <activity
            android:name=".NavigationTab.ManageBook"
            android:label="@string/title_activity_manage_book" >
        </activity>
    </application>

</manifest>
